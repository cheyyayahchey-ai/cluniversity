@using CLUniversity.Services
@using CLUniversity.Models

<div class="card">
    <div class="card-header">
        <h3>üèõÔ∏è Departments</h3>
        <button class="btn btn-primary" @onclick="() => showModal = true">‚ûï Add Department</button>
    </div>
    <div class="card-body">
        @if (departments.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Department Name</th>
                        <th>Description</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in departments)
                    {
                        <tr>
                            <td><span class="badge badge-info">@d.Code</span></td>
                            <td><strong>@d.Name</strong></td>
                            <td>@(d.Description ?? "-")</td>
                            <td>@d.CreatedAt.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="empty-state">No departments created yet.</p>
        }
    </div>
</div>

@if (showModal)
{
    <div class="modal-overlay" @onclick="() => showModal = false">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>üèõÔ∏è Add New Department</h3>
                <span class="close-btn" @onclick="() => showModal = false">‚úï</span>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Department Code *</label>
                    <input type="text" class="form-control" @bind="newItem.Code" placeholder="CS, ENG, BUS..." />
                </div>
                <div class="form-group">
                    <label>Department Name *</label>
                    <input type="text" class="form-control" @bind="newItem.Name" placeholder="Computer Science" />
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" @bind="newItem.Description" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="() => showModal = false">Cancel</button>
                <button class="btn btn-primary" @onclick="Save">üíæ Save</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public SchoolDataService DataService { get; set; } = null!;
    [Parameter] public EventCallback OnRefresh { get; set; }

    private List<Department> departments = new();
    private bool showModal = false;
    private Department newItem = new();

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        departments = DataService.GetDepartments();
    }

    private void Save()
    {
        if (!string.IsNullOrEmpty(newItem.Code) && !string.IsNullOrEmpty(newItem.Name))
        {
            newItem.Code = newItem.Code.ToUpper();
            DataService.AddDepartment(newItem);
            newItem = new();
            showModal = false;
            LoadData();
            OnRefresh.InvokeAsync();
        }
    }
}
