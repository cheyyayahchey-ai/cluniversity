@using CLUniversity.Services
@using CLUniversity.Models

<div class="card">
    <div class="card-header">
        <h3>üëî Staff & Administration</h3>
        <button class="btn btn-primary" @onclick="() => showModal = true">‚ûï Add Staff</button>
    </div>
    <div class="card-body">
        @if (staffList.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Staff ID</th>
                        <th>Full Name</th>
                        <th>Position</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Salary (USD)</th>
                        <th>Salary (KHR)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in staffList)
                    {
                        var dept = DataService.GetDepartment(s.DepartmentId);
                        <tr>
                            <td><strong>@s.StaffId</strong></td>
                            <td>@s.FullName</td>
                            <td><span class="badge badge-warning">@s.Position</span></td>
                            <td>@s.Email</td>
                            <td>@(dept?.Name ?? "-")</td>
                            <td class="amount green">$@s.Salary.ToString("N2")</td>
                            <td class="amount red">·üõ@((s.Salary * 4100).ToString("N0"))</td>
                            <td>
                                <button class="btn btn-danger btn-sm" @onclick="() => Delete(s.Id)">üóëÔ∏è</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="empty-state">No staff members registered yet.</p>
        }
    </div>
</div>

@if (showModal)
{
    <div class="modal-overlay" @onclick="() => showModal = false">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>üëî Add New Staff</h3>
                <span class="close-btn" @onclick="() => showModal = false">‚úï</span>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group">
                        <label>First Name *</label>
                        <input type="text" class="form-control" @bind="newItem.FirstName" />
                    </div>
                    <div class="form-group">
                        <label>Last Name *</label>
                        <input type="text" class="form-control" @bind="newItem.LastName" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Position *</label>
                    <input type="text" class="form-control" @bind="newItem.Position" placeholder="Vice Dean, Admin..." />
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Email *</label>
                        <input type="email" class="form-control" @bind="newItem.Email" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" @bind="newItem.Phone" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Department</label>
                        <select class="form-control" @bind="newItem.DepartmentId">
                            <option value="">Select</option>
                            @foreach (var d in departments)
                            {
                                <option value="@d.Id">@d.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Monthly Salary (USD) *</label>
                        <input type="number" class="form-control" @bind="newItem.Salary" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="() => showModal = false">Cancel</button>
                <button class="btn btn-primary" @onclick="Save">üíæ Save</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public SchoolDataService DataService { get; set; } = null!;
    [Parameter] public EventCallback OnRefresh { get; set; }

    private List<Staff> staffList = new();
    private List<Department> departments = new();
    private bool showModal = false;
    private Staff newItem = new();

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        staffList = DataService.GetStaff();
        departments = DataService.GetDepartments();
    }

    private void Save()
    {
        if (!string.IsNullOrEmpty(newItem.FirstName) && !string.IsNullOrEmpty(newItem.Email))
        {
            DataService.AddStaff(newItem);
            newItem = new();
            showModal = false;
            LoadData();
            OnRefresh.InvokeAsync();
        }
    }

    private void Delete(string id)
    {
        DataService.DeleteStaff(id);
        LoadData();
        OnRefresh.InvokeAsync();
    }
}
