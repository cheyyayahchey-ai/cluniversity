@using CLUniversity.Services
@using CLUniversity.Models

<div class="card">
    <div class="card-header">
        <h3>üë®‚Äçüéì Student Records</h3>
        <button class="btn btn-primary" @onclick="() => showModal = true">‚ûï Add Student</button>
    </div>
    <div class="card-body">
        @if (students.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in students)
                    {
                        var dept = DataService.GetDepartment(s.DepartmentId);
                        <tr>
                            <td><strong>@s.StudentId</strong></td>
                            <td>@s.FullName</td>
                            <td>@s.Email</td>
                            <td>@(s.Phone ?? "-")</td>
                            <td>@(dept?.Name ?? "-")</td>
                            <td><span class="badge badge-success">@s.Status</span></td>
                            <td>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteStudent(s.Id)">üóëÔ∏è</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="empty-state">No students registered yet.</p>
        }
    </div>
</div>

@if (showModal)
{
    <div class="modal-overlay" @onclick="() => showModal = false">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>üë®‚Äçüéì Add New Student</h3>
                <span class="close-btn" @onclick="() => showModal = false">‚úï</span>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group">
                        <label>First Name *</label>
                        <input type="text" class="form-control" @bind="newStudent.FirstName" />
                    </div>
                    <div class="form-group">
                        <label>Last Name *</label>
                        <input type="text" class="form-control" @bind="newStudent.LastName" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Email *</label>
                        <input type="email" class="form-control" @bind="newStudent.Email" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" @bind="newStudent.Phone" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Gender</label>
                        <select class="form-control" @bind="newStudent.Gender">
                            <option value="">Select</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <select class="form-control" @bind="newStudent.DepartmentId">
                            <option value="">Select</option>
                            @foreach (var d in departments)
                            {
                                <option value="@d.Id">@d.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="() => showModal = false">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveStudent">üíæ Save</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public SchoolDataService DataService { get; set; } = null!;
    [Parameter] public EventCallback OnRefresh { get; set; }

    private List<Student> students = new();
    private List<Department> departments = new();
    private bool showModal = false;
    private Student newStudent = new();

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        students = DataService.GetStudents();
        departments = DataService.GetDepartments();
    }

    private void SaveStudent()
    {
        if (!string.IsNullOrEmpty(newStudent.FirstName) && !string.IsNullOrEmpty(newStudent.Email))
        {
            DataService.AddStudent(newStudent);
            newStudent = new();
            showModal = false;
            LoadData();
            OnRefresh.InvokeAsync();
        }
    }

    private void DeleteStudent(string id)
    {
        DataService.DeleteStudent(id);
        LoadData();
        OnRefresh.InvokeAsync();
    }
}
