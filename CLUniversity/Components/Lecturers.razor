@using CLUniversity.Services
@using CLUniversity.Models

<div class="card">
    <div class="card-header">
        <h3>üë®‚Äçüè´ Lecturer Records</h3>
        <button class="btn btn-primary" @onclick="() => showModal = true">‚ûï Add Lecturer</button>
    </div>
    <div class="card-body">
        @if (lecturers.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Lecturer ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Qualification</th>
                        <th>Department</th>
                        <th>Salary (USD)</th>
                        <th>Salary (KHR)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in lecturers)
                    {
                        var dept = DataService.GetDepartment(l.DepartmentId);
                        <tr>
                            <td><strong>@l.LecturerId</strong></td>
                            <td>@l.FullName</td>
                            <td>@l.Email</td>
                            <td><span class="badge badge-info">@(l.Qualification ?? "-")</span></td>
                            <td>@(dept?.Name ?? "-")</td>
                            <td class="amount green">$@l.Salary.ToString("N2")</td>
                            <td class="amount red">·üõ@((l.Salary * 4100).ToString("N0"))</td>
                            <td>
                                <button class="btn btn-danger btn-sm" @onclick="() => Delete(l.Id)">üóëÔ∏è</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="empty-state">No lecturers registered yet.</p>
        }
    </div>
</div>

@if (showModal)
{
    <div class="modal-overlay" @onclick="() => showModal = false">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>üë®‚Äçüè´ Add New Lecturer</h3>
                <span class="close-btn" @onclick="() => showModal = false">‚úï</span>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group">
                        <label>First Name *</label>
                        <input type="text" class="form-control" @bind="newItem.FirstName" />
                    </div>
                    <div class="form-group">
                        <label>Last Name *</label>
                        <input type="text" class="form-control" @bind="newItem.LastName" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Email *</label>
                        <input type="email" class="form-control" @bind="newItem.Email" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" @bind="newItem.Phone" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Qualification</label>
                        <input type="text" class="form-control" @bind="newItem.Qualification" placeholder="PhD, Master's..." />
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <select class="form-control" @bind="newItem.DepartmentId">
                            <option value="">Select</option>
                            @foreach (var d in departments)
                            {
                                <option value="@d.Id">@d.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label>Monthly Salary (USD) *</label>
                    <input type="number" class="form-control" @bind="newItem.Salary" />
                    <small class="convert">‚âà ·üõ@((newItem.Salary * 4100).ToString("N0"))</small>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="() => showModal = false">Cancel</button>
                <button class="btn btn-primary" @onclick="Save">üíæ Save</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public SchoolDataService DataService { get; set; } = null!;
    [Parameter] public EventCallback OnRefresh { get; set; }

    private List<Lecturer> lecturers = new();
    private List<Department> departments = new();
    private bool showModal = false;
    private Lecturer newItem = new();

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        lecturers = DataService.GetLecturers();
        departments = DataService.GetDepartments();
    }

    private void Save()
    {
        if (!string.IsNullOrEmpty(newItem.FirstName) && !string.IsNullOrEmpty(newItem.Email))
        {
            DataService.AddLecturer(newItem);
            newItem = new();
            showModal = false;
            LoadData();
            OnRefresh.InvokeAsync();
        }
    }

    private void Delete(string id)
    {
        DataService.DeleteLecturer(id);
        LoadData();
        OnRefresh.InvokeAsync();
    }
}
